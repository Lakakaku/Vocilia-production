{
  "name": "@ai-feedback/api-gateway",
  "version": "1.0.0",
  "description": "Central API gateway for the AI Feedback Platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
