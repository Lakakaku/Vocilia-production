          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[HOOK] File modification complete. Running syntax checks...\" && if [ -f \"$CLAUDE_PROJECT_DIR/package.json\" ]; then cd \"$CLAUDE_PROJECT_DIR\" && npm run lint 2>/dev/null || echo \"No lint script found\"; elif find \"$CLAUDE_PROJECT_DIR\" -name '*.py' | head -1 | grep -q .; then cd \"$CLAUDE_PROJECT_DIR\" && python -m py_compile **/*.py 2>/dev/null || echo \"Python syntax check complete\"; fi"
          }
        ]
      },
      {
        "matcher": "Bash\\(git.*commit.*\\)",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[HOOK] Git commit detected. Running pre-commit validations...\" && cd \"$CLAUDE_PROJECT_DIR\" && git diff --cached --name-only | head -5 | xargs -I {} echo \"Modified: {}\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
