{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(source:*)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(tree:*)",
      "Bash(ruff:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(cat:*)",
      "Bash(ruff check:*)",
      "Bash(pytest:*)",
      "Bash(python:*)",
      "Bash(python -m pytest:*)",
      "Bash(python3 -m pytest:*)",
      "WebFetch(domain:*)",
      "Bash(gh issue view:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(clear)",
      "Bash(claude mcp:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ollama list:*)",
      "mcp__serena__write_memory",
      "Bash(npm run build:*)",
      "Bash(npm install)",
      "Bash(npx tsc:*)",
      "Bash(npx typescript:*)",
      "Bash(node:*)",
      "Bash(pip3 list:*)",
      "mcp__serena__search_for_pattern",
      "mcp__serena__list_dir",
      "mcp__serena__find_symbol",
      "mcp__serena__replace_symbol_body",
      "mcp__serena__find_file",
      "mcp__serena__read_memory",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__check_onboarding_performed",
      "Bash(npm run dev:*)",
      "Bash(npm install:*)",
      "Bash(npm init:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(scripts/deploy-dev.sh:*)",
      "Bash(open:*)",
      "Bash(docker:*)",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__think_about_collected_information",
      "Bash(ollama pull:*)",
      "Bash(docker-compose:*)",
      "mcp__serena__insert_after_symbol",
      "mcp__serena__list_memories",
      "mcp__serena__insert_before_symbol",
      "mcp__serena__think_about_task_adherence",
      "mcp__serena__think_about_whether_you_are_done",
      "Bash(git reset:*)"
    ],
    "deny": [],
    "additionalDirectories": [
      "/Users/lucasjenner"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[HOOK] About to modify files. Creating backup...\" && mkdir -p \"$CLAUDE_PROJECT_DIR/.claude/backups/$(date +%Y%m%d_%H%M%S)\" && find \"$CLAUDE_PROJECT_DIR\" -name '*.py' -o -name '*.js' -o -name '*.ts' -o -name '*.json' -o -name '*.md' | grep -v '.claude' | head -10 | xargs -I {} cp {} \"$CLAUDE_PROJECT_DIR/.claude/backups/$(date +%Y%m%d_%H%M%S)/\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[HOOK] File modification complete. Running syntax checks...\" && if [ -f \"$CLAUDE_PROJECT_DIR/package.json\" ]; then cd \"$CLAUDE_PROJECT_DIR\" && npm run lint 2>/dev/null || echo \"No lint script found\"; elif find \"$CLAUDE_PROJECT_DIR\" -name '*.py' | head -1 | grep -q .; then cd \"$CLAUDE_PROJECT_DIR\" && python -m py_compile **/*.py 2>/dev/null || echo \"Python syntax check complete\"; fi"
          }
        ]
      },
      {
        "matcher": "Bash\\(git.*commit.*\\)",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[HOOK] Git commit detected. Running pre-commit validations...\" && cd \"$CLAUDE_PROJECT_DIR\" && git diff --cached --name-only | head -5 | xargs -I {} echo \"Modified: {}\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[HOOK] Session timestamp: $(date '+%Y-%m-%d %H:%M:%S')\" >> \"$CLAUDE_PROJECT_DIR/.claude/session.log\""
          }
        ]
      }
    ]
  }
}