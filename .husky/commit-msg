#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
# Format: type(scope): description
# Example: feat(voice): add iOS Safari recording fallback

commit_regex='^(feat|fix|docs|style|refactor|test|chore|hotfix)(\([a-z0-9-]+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Format should be: type(scope): description"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, hotfix"
  echo "Scopes: voice, ai, payment, pos, admin, fraud, ui, etc."
  echo ""
  echo "Examples:"
  echo "  feat(voice): add iOS Safari audio recording fallback"
  echo "  fix(payment): resolve Stripe webhook validation"
  echo "  docs(api): update POS integration documentation"
  echo ""
  exit 1
fi

echo "✅ Commit message format is valid!"