# Production Environment Configuration
# DO NOT commit this file with real secrets - this is a template

# Database - Use Supabase in production
DATABASE_URL="postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT].supabase.co:5432/postgres"
SUPABASE_URL="https://[YOUR_PROJECT].supabase.co"
SUPABASE_ANON_KEY="[YOUR_SUPABASE_ANON_KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR_SUPABASE_SERVICE_ROLE_KEY]"

# Redis - Use managed Redis service
REDIS_URL="redis://[YOUR_REDIS_HOST]:6379"
REDIS_PASSWORD="[YOUR_REDIS_PASSWORD]"

# AI Services - Use cloud APIs for production
OLLAMA_ENDPOINT="http://ollama:11434"  # Internal service
OPENAI_API_KEY="sk-[YOUR_OPENAI_KEY]"
ANTHROPIC_API_KEY="[YOUR_ANTHROPIC_KEY]"

# Authentication & Security
JWT_SECRET="[GENERATE_STRONG_SECRET_256_BITS]"
SESSION_SECRET="[GENERATE_STRONG_SECRET_256_BITS]"
ENCRYPTION_KEY="[GENERATE_STRONG_32_CHAR_KEY]"
QR_ENCRYPTION_KEY="[GENERATE_STRONG_QR_KEY]"
BCRYPT_ROUNDS=12

# Application URLs
NEXT_PUBLIC_API_URL="https://api.feedback.your-domain.com"
NEXT_PUBLIC_WS_URL="wss://api.feedback.your-domain.com"
NEXT_PUBLIC_APP_URL="https://feedback.your-domain.com"
NEXT_PUBLIC_BUSINESS_DASHBOARD_URL="https://business.feedback.your-domain.com"
NEXT_PUBLIC_ADMIN_PANEL_URL="https://admin.feedback.your-domain.com"

# Payment Processing - Stripe
STRIPE_SECRET_KEY="sk_live_[YOUR_STRIPE_SECRET]"
STRIPE_PUBLISHABLE_KEY="pk_live_[YOUR_STRIPE_PUBLISHABLE]"
STRIPE_WEBHOOK_SECRET="whsec_[YOUR_WEBHOOK_SECRET]"
STRIPE_CONNECT_CLIENT_ID="ca_[YOUR_CONNECT_CLIENT_ID]"

# POS System Integrations
SQUARE_ENVIRONMENT="production"
SQUARE_CLIENT_ID="[YOUR_SQUARE_CLIENT_ID]"
SQUARE_CLIENT_SECRET="[YOUR_SQUARE_CLIENT_SECRET]"

SHOPIFY_CLIENT_ID="[YOUR_SHOPIFY_CLIENT_ID]"
SHOPIFY_CLIENT_SECRET="[YOUR_SHOPIFY_CLIENT_SECRET]"

ZETTLE_CLIENT_ID="[YOUR_ZETTLE_CLIENT_ID]"
ZETTLE_CLIENT_SECRET="[YOUR_ZETTLE_CLIENT_SECRET]"

# Swedish Business Validation
BOLAGSVERKET_API_KEY="[YOUR_BOLAGSVERKET_API_KEY]"

# Email Service
RESEND_API_KEY="[YOUR_RESEND_API_KEY]"
SUPPORT_EMAIL="support@your-domain.com"
BUSINESS_EMAIL="business@your-domain.com"

# Monitoring & Logging
SENTRY_DSN="https://[YOUR_SENTRY_DSN]@o[ORG].ingest.sentry.io/[PROJECT]"
LOG_LEVEL="info"
GRAFANA_ADMIN_PASSWORD="[STRONG_GRAFANA_PASSWORD]"

# Performance & Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
API_TIMEOUT_MS=30000
WS_TIMEOUT_MS=300000

# SSL/TLS Configuration
SSL_CERT_PATH="/etc/nginx/ssl"
ENABLE_HTTPS_REDIRECT=true

# Resource Limits
MAX_UPLOAD_SIZE=10485760  # 10MB
MAX_AUDIO_DURATION=120000  # 2 minutes in milliseconds

# Feature Flags
ENABLE_VOICE_PROCESSING=true
ENABLE_FRAUD_DETECTION=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_DASHBOARD=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
BACKUP_RETENTION_DAYS=30
ENABLE_AUTOMATED_BACKUPS=true

# Deployment Configuration
DEPLOY_ENVIRONMENT="production"
BUILD_TIMESTAMP="[AUTO_GENERATED]"
GIT_COMMIT_SHA="[AUTO_GENERATED]"
VERSION="[AUTO_GENERATED]"