{
  "name": "ai-feedback-platform",
  "version": "1.0.0",
  "description": "AI-powered customer feedback platform with voice recognition and automated cashback rewards",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "cd apps/customer-pwa && npm run dev",
    "dev:api": "cd apps/api-gateway && npm run dev",
    "dev:business": "cd apps/business-dashboard && npm run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:turbo": "turbo run test",
    "test:e2e": "playwright test --config=playwright.config.js",
    "test:e2e:headed": "playwright test --config=playwright.config.js --headed",
    "test:e2e:debug": "playwright test --config=playwright.config.js --debug",
    "test:e2e:report": "playwright show-report test-results/e2e-report",
    "test:e2e:pilot": "playwright test --config=playwright.config.js --reporter=./tests/e2e/reporters/pilot-reporter.js",
    "validate:pilot": "node scripts/validate-pilot-readiness.js",
    "validate:production": "node scripts/production-deployment-validation.js",
    "test:ios": "playwright test --config=playwright.ios.config.js",
    "test:ios:headed": "playwright test --config=playwright.ios.config.js --headed",
    "test:ios:debug": "playwright test --config=playwright.ios.config.js --debug",
    "test:ios:report": "playwright show-report test-results/ios-safari",
    "test:ios:setup": "node tests/ios-safari/run-tests.js",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "typecheck": "turbo run typecheck",
    "db:seed": "npx tsc -p packages/database/tsconfig.json && node packages/database/dist/seed.js"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.4",
    "@types/node": "^20.19.11",
    "@playwright/test": "^1.55.0",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-config-next": "^14.2.32",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "turbo": "^1.13.4",
    "typescript": "^5.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "jest-html-reporter": "^3.10.2"
  },
  "packageManager": "npm@10.9.3",
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
